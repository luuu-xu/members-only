extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name*
      input#name.form-control(type='text' name='name' autocomplete='name' required value=(undefined===user ? '' : user.name)) 
    div.form-group
      label(for='username') Email address*
      input#username.form-control(type='text' name='username' autocomplete='email' required value=(undefined===user ? '' : user.username)) 
    div.form-group
      label(for='password') Password*
      input#password.form-control(type='password' name='password' autocomplete='new-password' required)
    div.form-group
      label(for='confirmpw') Confirm Password*
      input#confirmpw.form-control(type='password' name='confirmpw' autocomplete='new-password' required)
    button.btn.btn-primary(type='submit') Sign Up

    p=(undefined===user ? '' : user.member_status)

  if errors
    ul
      for error in errors
        li!= error.msg